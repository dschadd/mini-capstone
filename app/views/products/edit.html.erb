<h1>Edit Product</h1>
<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    Name: <input type="text" name="name" value="<%=@product.name%>">
  </div>
  <div>
    Price: <input type="text" name="price" value="<%=@product.price%>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%=@product.description%>">
  </div>
  <div>
    Image_URL: <input type="text" name="image_url" value="<%=@product.image_url%>">
  </div>
  <div>
    Supplier_ID:  <select name="supplier_id">
                    <% Supplier.all.each do |supplier| %>
                    <option value="<%= supplier.id %>" <%= 'selected="selected"' if supplier.id == @product.supplier.id %>><%= supplier.name %></option>
                    <% end %>
                  </select>
  </div>
  <input type="submit" value="Save product">
</form>
